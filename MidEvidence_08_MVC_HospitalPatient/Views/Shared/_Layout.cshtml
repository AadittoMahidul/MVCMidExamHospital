<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
       
        .main {
            padding-top:20px;
            height: calc(100vh - 140px);
        }
    </style>
    @RenderSection("styles", false)

</head>
<body>
    <nav class="navbar navbar-light bg-secondary navbar-expand-md  shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand text-white">
                <img style="width:40px; height:40px;" src="~/Assets/logo.jpg" />
            </span>
            <span class="navbar-brand text-white" style="font-size:1.7rem;"><b>HospitalPatient</b><sup> Mid-08</sup></span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav nav ms-auto" style="font-size:1.3rem;">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link", style = "color: white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Hospitals", "Index", "Hospitals", new { }, new { @class = "nav-link", style = "color: white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Patients", "Index", "Patients", new { }, new { @class = "nav-link", style = "color: white" })
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <section class="container-fluid main">
        @RenderBody()
    </section>   
    <footer class="container-fluid">
            <p>Md. Mahidul Molla -1268459</p>
        </footer>
    @RenderSection("scripts", false)
</body>
</html>